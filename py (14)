idade=int(input("Digite sua idade:"))
if idade >=18:  #Caso verdadeiro 
    print("Maior de Idade")
else: #Caso Falso
    print("Menor de Idade")
     


idade=int(input("Digite sua Idade:"))
if idade ==16:
    print("Pode votar")
else:
    if idade>=16:
        print("Pode Dirigir")
    else:
        if idade<16:
            print("Apenas estude!")



idade=int(input("Digite sua Idade:"))
if idade >=16 and idade <18:
    print ("Pode votar!")
elif idade<16:
    print("Apenas estude!")
else:
    print("Pode Dirigir!")